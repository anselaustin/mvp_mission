<?xml version="1.0"?>
<StateMachine xmlns:xacro="http://ros.org/wiki/xacro">

    <State initial="true" name="survey" mode="flight">
        <Transition to="surface"/>
        <Transition to="stop"/>
    </State>

    <State name="surface" mode="flight">
        <Transition to="survey"/>
        <Transition to="stop"/>
    </State>

    <State name="stop" mode="stop">

    </State>

    <State name="deploy" mode="flight">

    </State>

    <State name="recover" mode="flight">

    </State>

</StateMachine>
