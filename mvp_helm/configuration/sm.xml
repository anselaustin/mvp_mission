<?xml version="1.0"?>
<xacro xmlns:xacro="http://ros.org/wiki/xacro">

    <state-machine-configuration>

        <state initial="true" name="start" mode="flight">
            <transition to="survey"/>
            <transition to="evaluation"/>
            <transition to="kill"/>
        </state>

        <state name="survey" mode="flight">
            <transition to="surface"/>
            <transition to="start"/>
            <transition to="kill"/>
        </state>

        <state name="surface" mode="flight">
            <transition to="survey"/>
            <transition to="stop"/>
            <transition to="kill"/>
        </state>

        <state name="evaluation" mode="teleop">
            <transition to="stop"/>
            <transition to="kill"/>
        </state>

        <state name="kill" mode="idle">
            <transition to="start"/>
        </state>

    </state-machine-configuration>

</xacro>
