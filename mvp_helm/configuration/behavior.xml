<?xml version="1.0"?>
<BehaviorConfiguration xmlns:xacro="http://ros.org/wiki/xacro">

    <Behavior name="bhv00" plugin="helm::PathFollowing">

        <State name="survey" priority="1"/>

        <State name="surface" priority="1"/>

        <Parameters type="ros">
            <param name="file" type="string" value="test"/>
            <param name="world_frame" type="string" value="world"/>
            <rosparam command="load" file="$(find mvp_helm)/param/bhv00.yaml"/>
        </Parameters>

    </Behavior>

    <Behavior name="eval00" plugin="helm::MotionEvaluation">

        <State name="evaluation" priority="1"/>

    </Behavior>

    <Behavior name="recovery_bhv" plugin="helm::PathFollowing">
        <State name="recover" priority="0"/>
    </Behavior>

    <Behavior name="bhv01" plugin="helm::StopEverything">
        <State name="stop" priority="inf"/>

        <Parameters>

        </Parameters>

    </Behavior>

    <Behavior name="bhv02" plugin="helm::PeriodicSurface">
        <State name="surface" priority="1"/>

        <Parameters type="helm">
            <period>60</period>
        </Parameters>
    </Behavior>

</BehaviorConfiguration>