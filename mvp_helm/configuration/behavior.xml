<?xml version="1.0"?>
<xacro xmlns:xacro="http://ros.org/wiki/xacro">

    <behavior-configuration>

        <behavior name="bhv00" plugin="helm::PathFollowing">
            <state name="survey" priority="1"/>
            <state name="surface" priority="1"/>
            <parameters type="ros">
                <rosparam command="load" file="$(find mvp_helm)/param/bhv00.yaml"/>
                <param name="state_done" type="string" value="start"/>
                <param name="state_fail" type="string" value="kill"/>
            </parameters>
        </behavior>

        <behavior name="bhv01" plugin="helm::DepthTracking">
            <state name="survey" priority="1"/>
            <parameters type="ros">
                <rosparam command="load" file="$(find mvp_helm)/param/bhv01.yaml"/>
            </parameters>
        </behavior>

        <behavior name="bhv02" plugin="helm::MotionEvaluation">
            <state name="evaluation" priority="1"/>
            <parameters type="ros">
                <rosparam command="load" file="$(find mvp_helm)/param/bhv02.yaml"/>
            </parameters>
        </behavior>

        <behavior name="bhv03" plugin="helm::PeriodicSurface">
            <state name="survey" priority="2"/>
            <parameters type="ros">
                <rosparam command="load" file="$(find mvp_helm)/param/bhv03.yaml"/>
            </parameters>
        </behavior>

    </behavior-configuration>

</xacro>